<h2>ایجاد حساب کاربری جدید</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'پست الکترونیکی' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'رمز عبور' %>
    <% if @minimum_password_length %>
    <em>(حداقل تعداد نویسه‌ها: <%= @minimum_password_length %> )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'تایید رمز عبور' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= flash[:recaptcha_error] %>
  <%= recaptcha_tags(ajax: true) %>
  
  <div class="actions">
    <%= f.submit "ایجاد حساب کاربری" %>
  </div>
<% end %>



<%= render "devise/shared/links" %>
